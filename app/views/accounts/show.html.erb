<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @account.name %>
</p>

<p>
  <strong>Address:</strong>
  <%= @account.address %>
</p>

<p>
  <strong>Phone:</strong>
  <%= @account.phone %>
</p>

<p>
  <strong>Email:</strong>
  <%= @account.user.email %>
</p>

<p><%= link_to 'Add a recipient', new_recipient_path, class: 'btn btn-danger' %>

 | <%= link_to 'Edit', edit_account_path(@account), class: 'btn btn-default' %>

</p>


<h2>My recipients</h2>
<table class="table table-hover">
<tr>
	<th>Name</th>
	<th>Address</th>
	<th>Occasions</th>
	<th></th>
</tr>
<% @account.user.recipients.each do |recipient| %>
	<tr>
		<td><%= recipient.name %></td>
		<td><%= recipient.address %></td>
		<td>
			<% if recipient.occasions.count > 0 %>
				<% recipient.occasions.each do |occasion| %>
					<%= link_to occasion.name, occasion %><br>
				<% end %>
			<% end %>
		</td>
		<td><%= link_to 'Add occasion', new_occasion_path(recipient: recipient.id), class: 'btn btn-primary' %></td>
	</tr>
<% end %>
</table>
















